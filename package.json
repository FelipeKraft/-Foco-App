{
  "name": "mais-foco",
  "version": "1.0.0",
  "description": "Aplicativo de produtividade com t√©cnica Pomodoro e sistema de recompensas",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "build:all": "electron-builder -mwl"
  },
  "keywords": ["pomodoro", "produtividade", "foco"],
  "author": "Seu Nome",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.maisfoco.app",
    "productName": "+FOCO",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "main.js",
      "package.json"
    ],
    "win": {
      "target": ["nsis", "portable"],
      "icon": "src/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "src/icon.icns"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "icon": "src/icon.png",
      "category": "Utility"
    }
  }
}